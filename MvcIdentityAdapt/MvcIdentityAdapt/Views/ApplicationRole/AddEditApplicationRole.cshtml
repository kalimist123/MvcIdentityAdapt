@model MvcIdentityAdapt.Models.IdentitySampleApplication.Models.ApplicationRoleViewModel
@using MvcIdentityAdapt.Models
@using MvcIdentityAdapt.Models.IdentitySampleApplication.Models

<form asp-action="AddEditApplicationRole" role="form">
      <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="RoleName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="RoleName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Description" class="form-control" />
                </div>
                
                <button class="btn btn-success" type="submit">            
                  Save Role  </button>
            </div>
        </div>
    </div>
  
</form>
